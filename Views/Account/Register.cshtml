@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-warning" role="alert">
        @* bootstrap icon: exclamation triangle | source: https://icons.getbootstrap.com/icons/exclamation-triangle/ *@
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-exclamation-triangle alert-icon" viewBox="0 0 24 24">
            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.15.15 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.2.2 0 0 1-.054.06.1.1 0 0 1-.066.017H1.146a.1.1 0 0 1-.066-.017.2.2 0 0 1-.054-.06.18.18 0 0 1 .002-.183L7.884 2.073a.15.15 0 0 1 .054-.057m1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767z"/>
            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0M7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0z"/>
        </svg>
        @ViewBag.Error
    </div>
}

<p>Already have an account? 
    <a asp-controller="Account" asp-action="Login">Return to user login.</a>
</p>

<form method="post" asp-controller="Account" asp-action="Register" class="form-container">
    <div class="form-item">
        <label for="name">Full Name:</label>
        <input type="text" name="name" id="name" required /><br /><br />
    </div>
    <div class="form-item">
        <label for="email">Email Address:</label>
        <input type="email" name="email" id="email" required /><br /><br />
    </div>
    <div class="form-item">
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" required /><br /><br />
    </div>
    <div class="form-item">
        <label for="ConfirmPassword">Confirm Password:</label>
        <input type="password" name="ConfirmPassword" id="ConfirmPassword" /><br /><br />
    </div>
    <input type="submit" value="Register" />
</form>
