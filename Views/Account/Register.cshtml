@{
    ViewData["Title"] = "Register";
}

@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}

<h1>@ViewData["Title"]</h1>
<p>Already have an account? 
    <a asp-controller="Account" asp-action="Login">Return to user login.</a>
</p>

<form method="post" asp-controller="Account" asp-action="Register" class="form-container">
    <div class="form-item">
        <label for="FullName">Full Name:</label>
        <input type="text" name="FullName" id="FullName" required /><br /><br>
    </div>
    <div class="form-item">
        <label for="Email">Email Address:</label>
        <input type="text" name="Email" id="Email" required /><br /><br>
    </div>
    <div class="form-item">
        <label for="Password">Password:</label>
        <input type="password" name="Password" id="Password" required /><br /><br>
    </div>
    <div class="form-item">
        <label for="ConfirmPassword">Confirm Password:</label>
        <input type="password" name="ConfirmPassword" id="ConfirmPassword"/><br /><br>
    </div>
    <input type="submit" value="Register" />
</form>