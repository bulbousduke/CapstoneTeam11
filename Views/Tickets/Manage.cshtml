@model CapstoneTeam11.Models.TicketModel

@{
    ViewData["Title"] = "Manage Ticket";
}

<h2>Manage Ticket</h2>

<form asp-action="Manage" method="post">
    <input type="hidden" name="id" value="@Model.Id" />

    <label for="Title">Title:</label><br />
    <input type="text" name="Title" value="@Model.Title" /><br />

    <label for="Description">Description:</label><br />
    <textarea name="Description">@Model.Description</textarea><br />

    <label for="Status">Status:</label><br />
    <select name="Status">
        <option value="Open" selected="@(Model.Status == "Open")">Open</option>
        <option value="In Progress" selected="@(Model.Status == "In Progress")">In Progress</option>
        <option value="Closed" selected="@(Model.Status == "Closed")">Closed</option>
    </select><br />

    <label for="JournalNotes">New Note:</label><br />
    <input type="text" name="JournalNotes" /><br />

    <input type="submit" value="Update Ticket" />
</form>