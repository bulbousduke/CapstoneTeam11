@model CapstoneTeam11.Models.Ticket

@{
    ViewData["Title"] = "Edit Ticket";
}

<h1>Edit Ticket</h1>

<form asp-action="EditTicket" asp-route-id="@Model.Id" method="post" class="form-container">
    <div class="form-item">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-item">
        <label asp-for="Category" class="control-label"></label>
        <select asp-for="Category" class="form-control" asp-items="Html.GetEnumSelectList<Category>()"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-item">
        <label asp-for="Priority" class="control-label"></label>
        <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<Priority>()"></select>
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-item form-check">
        <label asp-for="IsCompleted" class="form-check-label">
            <input type="checkbox" asp-for="IsCompleted" class="form-check-input" style="accent-color: #570052;" />
            IsCompleted
        </label>
    </div>

    <div class="form-item">
        <label asp-for="Assignee" class="control-label"></label>
        <input asp-for="Assignee" class="form-control" />
        <span asp-validation-for="Assignee" class="text-danger"></span>
    </div>

    <input type="submit" value="Save Changes" id="save-changes-btn"/>
    <a asp-action="ViewPast" class="btn btn-dark">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}