@model List<CapstoneTeam11.Models.Ticket>

@{
    ViewData["Title"] = "View Past Tickets";
    var role = User.FindFirst("AccessLevel")?.Value;
}

<h1>Past Tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Category</th>
            <th>Priority</th>
            <th>Is Completed</th>
            @if (role == "Admin" || role == "Employee")
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
    @foreach (var ticket in Model)
    {
        <tr>
            <td>@ticket.Description</td>
            <td>@ticket.Category</td>
            <td>@ticket.Priority</td>
            <td>@(ticket.IsCompleted ? "Yes" : "No")</td>
            @if (role == "Admin" || role == "Employee")
            {
                <td>
                    <a asp-action="EditTicket" asp-route-id="@ticket.Id" class="btn btn-sm btn-warning">Edit</a>
                </td>
            }
        </tr>
    }
    </tbody>
</table>