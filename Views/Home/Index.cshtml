@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticklr Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <nav class="navbar">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="@Url.Content("~/images/Asset 2.png")" alt="Ticklr Logo" class="navbar-logo">
        </a>
        <ul class="nav-links">
            <li><a href="">Home</a></li>
            <li><a href="#">Help</a></li>
            <li><a href="#">Sign Out</a></li>
            <li class="user-icon"><i class="fas fa-user"></i></li>
        </ul>
    </nav>

    <div class="dashboard">
        <h1>Welcome to Ticklr Ticket Management Dashboard</h1>
        <div class="cards">
            <div class="card">
                <i class="fas fa-ticket-alt"></i>
                <a href="#">CREATE A TICKET</a>
            </div>
            <div class="card">
                <i class="fas fa-tasks"></i>
                <a href="#">MANAGE TICKETS</a>
            </div>
            <div class="card">
                <i class="fas fa-archive"></i>
                <a href="#">VIEW PAST TICKETS</a>
            </div>
        </div>
    </div>
</body>
</html>
